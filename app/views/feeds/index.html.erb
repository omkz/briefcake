<div class="mt-16 max-w-4xl mx-auto">
  <% if current_user.unsubscribed_at.present? %>
    <div class="bg-red-500 text-white p-5 mb-5">
      <p>You are now not receiving ou our emails because you have opted out!</p>
      <p>Want to get the emails again? Click <%= link_to "subscribe", current_user.resubscribe_url, class: "text-white underline" %>.</p>
    </div>
  <% end %>

  <% if @feeds.any? %>
    <header class="text-right mb-8">
      <%= link_to "Add new feed", new_feed_path, class: "btn btn--primary" %>
    </header>

    <div class="card card--light mb-8">
      <div class="card__content">
        <table class="table">
          <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @feeds.each do |feed| %>
            <%= content_tag :tr, id: dom_id(feed) do %>
              <td>
                <% if feed.is_instagram? %>
                  ðŸ“· <%= feed.instagram_user_name %>
                <% else %>
                  <%= link_to [:edit, feed] do %>
                    <abbr title="<%= feed.fetch_url %>"><%= feed.name %></abbr>
                  <% end %>
                <% end %>

                <% if !feed.can_be_fetched? %>
                  <div class="pill pill--danger text-white-600">Missing feed URL</div>
                <% end %>
              </td>
              <td class="text-right"><%= link_to "Unfollow", feed, method: :delete, class: "pill pill--secondary text-white-600", data: { confirm: "Are you sure you want to unfollow #{feed.name}?" } %></td>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  <% else %>
    <div class="my-8">
      <h1 class="mb-1 text-3xl sm:text-5xl leading-tight font-black">Hello there, <%= current_user.name %>!</h1>
      <p class="mb-8 text-xl text-gray-600">It's time to add your first feed, press the button.</p>

      <%= link_to "ðŸ‘Œ Add first feed", new_feed_path, class: "btn btn--primary" %>
    </div>
  <% end %>

  <p class="text-gray-600 mb-5">
    <%= link_to "You can also import an .opml file", import_path %>
  </p>
</div>

