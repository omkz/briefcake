<div class="max-w-4xl mx-auto">
  
  <div class="w-full flex" data-controller="preview" data-preview-url="<%= preview_feeds_path %>">

    <div class="w-full md:w-1/2">
      <h1 class="text-3xl mb-4">Add website</h1>
      <%= render "form", feed: @feed %>
      <div class="flex flex-col justify-center items-center mt-10">
        <p>
          Need to migrate your feeds from another platform?
        </p>
        <%= link_to "You can also import an .opml file", import_path, class: "btn btn--primary mt-6" %>
      </div>
    </div>

    <div class="hidden md:block w-1/2 relative ml-6">
      <%= render "pages/chrome" do %>
        <iframe data-target="preview.iframe" class="w-full" style="height: 400px"></iframe>
      <% end %>
    </div>
  </div>

</div>

