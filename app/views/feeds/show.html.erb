<div class="mt-16 max-w-xl mx-auto">
  <header class="flex justify-between">
    <h1 class="text-3xl mb-4">Show feed</h1>

    <div>
      <%= link_to 'Edit', edit_feed_path(@feed), class: 'btn btn--primary' %>
    </div>
  </header>

  <div class="flex">
    <h2 class="w-full sm:w-1/4">Name:</h2>
    <p class="w-full sm:w-3/4"><%= @feed.name %></p>
  </div>
  <div class="flex">
    <h2 class="w-full sm:w-1/4">Url:</h2>
    <p class="w-full sm:w-3/4"><%= @feed.url %></p>
  </div>
</div>

