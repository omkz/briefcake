<!DOCTYPE html>
<html>
<head>
  <%= render "shared/head" %>
</head>

<body>
  <%= show_site_wide_announcement(current_user) %>

  <% unless session[:has_seen_briefcake] %>
    <%= render "shared/briefcake_transition.html.erb" %>
  <% end %>

  <%= render "shared/flash" %>
  <div style="height: 5rem;">
    <%= render "shared/navigation" %>
  </div>
  <div style="min-height: calc(100vh - 12rem)">
    <%= yield %>
  </div>

  <div style="height: 6rem;">
    <%= render "shared/footer" %>
  </div>
  <%= render "shared/simple_analytics" %>
</body>
</html>



