<div class="text-white bg-white text-black w-full">
  <div class="chrome h-full">
    <div class="chrome__traffic-lights">
      <span class="chrome__traffic-light chrome__traffic-light--close" role="button"></span>
      <span class="chrome__traffic-light chrome__traffic-light--minimise" role="button"></span>
      <span class="chrome__traffic-light chrome__traffic-light--maximise" role="button"></span>
    </div>

    <div class="flex flex-col h-full w-full pt-1 text-black">
      <div class="border-b p-2">
        <p class="font-medium text-sm">🍰 Briefcake</p>
        <p class="font-light text-xs">
          Subject:
          <span class="text-gray-800">🍰 Briefcake – new items on <%= I18n.l(Time.zone.today.to_date) %></span>
        </p>
        <p class="font-light text-xs">
          To:
          <span class="text-gray-800"><%= current_user.try(:email_with_name) || "Jankees van Woezik" %></span>
        </p>
      </div>

      <%= yield %>
    </div>
  </div>
</div>
