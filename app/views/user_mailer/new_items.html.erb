<div class="mx-auto max-w-4xl w-full px-5">
  <h1 class="text-2xl my-5">Happy <%= Time.zone.now.strftime("%A") %>,</h1>

  <% @feed_items.each do |item| %>
    <div class="card card--light mb-8">
      <div class="card__content">
        <% if item.title.present? && item.feed.name.present? %>
          <h1 class="mb-0">
            <%= link_to item.title, item.link %><span class="text-gray-600"> - <%= item.feed.name %></span>
          </h1>
        <% else %>
          <h1 class="mb-0"><%= link_to [item.title.presence, item.feed.name.presence].compact.join(""), item.link %></h1>
        <% end %>

        <h4 class="text-xs mb-3"><%= I18n.l(item.publish_date.to_date, format: :long) %></h4>
        <div class="text-base text-left feed-content mb-4"><%= sanitize(item.description.to_s).html_safe %></div>
        <%= image_tag item.image_url if item.image_url %>
      </div>
    </div>
  <% end %>

  <p class="text-center mb-5 text-sm text-gray-600 max-w-2xl mx-auto">
    You are receiving this email because signed up at
    <a href="https://rssmailer.app">rssmailer.app</a>. If you want you can unsubscribe with <%= link_to "this unique url", @user.try(:unsubscribe_url) %>.
  </p>
</div>
